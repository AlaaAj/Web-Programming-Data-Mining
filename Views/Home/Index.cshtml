@using HeartDisease.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

 

    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            @for (int k = 0; k < ((List<Subspecialty>)ViewBag.photos).Count; k++)
            {
                var file = ((List<Subspecialty>)ViewBag.photos)[k];
                if (k == 0)
                {
                    <div class="item active">
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(file.Photo)" width="1100" height="500">
                        <div class="carousel-caption">
                            <h3>@file.Title</h3>

                        </div>
                    </div>
                    k++;
                }
                else
                {
                    <div class="item">
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(file.Photo)" width="1100" height="500">
                        <div class="carousel-caption">
                            <h3>@file.Title</h3>

                        </div>
                    </div>
                }
            }


        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
 
<br />
<br />
<div class="row">
    <div class="col-sm-12" style="background-color:lavender;"></div>

</div>
<h2><b> Medical Topic</b></h2>
@for (int i = 0; i < ((List<MedicalTopic>)ViewBag.Images).Count(); i++)
{
    var file = ((List<MedicalTopic>)ViewBag.Images)[i];

    <div class="container-fluid">
        <!-- Control the column width, and how they should appear on different devices -->
        <br />

        <div class="row">
            <div class="col-sm-6">
           
                <ul class="list-group">
                    <li class="list-group-item list-group-item-success">   <h2><b>Title @i :</b>@file.Title</h2></li>
                    <li class="list-group-item list-group-item-dark">  <h5><b>Date :</b>@file.date  | <b> Publisher <i class="fa fa-user" aria-hidden="true" style="color:red"></i> : </b>  @file.User.UserName</h5></li>

                    <li class="list-group-item list-group-item-warning">  <p><b>Content :</b> @file.C_Content_</p></li>
                    <li class="list-group-item list-group-item-danger">   <p><b>References :</b> @file.C_References_</p></li>
                    <li class="list-group-item list-group-item-info"><b>Views :</b><i class="fa fa-eye" aria-hidden="true" style="color:red"></i>  @file.Views</li>

                </ul>
            
            </div>
            <div class="col-sm-6"><img src="data:image/jpeg;base64,@Convert.ToBase64String(file.Photo)" width="500" height="300" /></div>
        </div>

        <br /><br />


        @for (int j = i += 1; j < ((List<MedicalTopic>)ViewBag.Images).Count(); j++)
        {
            file = ((List<MedicalTopic>)ViewBag.Images)[j];

            <div class="row">
                <div class="col-sm-6"><img src="data:image/jpeg;base64,@Convert.ToBase64String(file.Photo)" width="500" height="300" /></div>
                <div class="col-sm-6">
             
                        <ul class="list-group">
                            <li class="list-group-item list-group-item-success">   <h2><b>Title @j :</b>@file.Title</h2></li>
                            <li class="list-group-item list-group-item-dark">  <h5><b>Date :</b>@file.date  | <b> Publisher <i class="fa fa-user" aria-hidden="true" style="color:red"></i> :</b>  @file.User.UserName</h5></li>

                            <li class="list-group-item list-group-item-warning">  <p><b>Content :</b> @file.C_Content_</p></li>
                            <li class="list-group-item list-group-item-danger">   <p><b>References :</b> @file.C_References_</p></li>
                            <li class="list-group-item list-group-item-info"><b>Views :</b> <i class="fa fa-eye" aria-hidden="true" style="color:red"></i> @file.Views</li>
                        </ul>
                
                    </div>

                </div>break;
        }
        <br /><br />
    </div>
}

