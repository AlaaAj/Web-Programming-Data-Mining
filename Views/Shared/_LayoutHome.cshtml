<!DOCTYPE html>
<html lang="en">
<head>
    <title>2albak</title>

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" />
    <style>
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: red;
            color: black;
            text-align: center;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><i class="fa fa-stethoscope" style="font-size:24px;color:red"></i>2albak</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <i style="font-size:24px"></i>

                    <li>@Html.ActionLink("Home", "Index", "Home", routeValues: new { area = string.Empty }, htmlAttributes: new { id = "IndexLink" })</li>
                    <li>@Html.ActionLink("Medical Topic", "Topic", "Home", routeValues: new { area = string.Empty }, htmlAttributes: new { id = "TopicLink" })</li>
                    <li>@Html.ActionLink("Consulting", "ConIndex", "Home", routeValues: new { area = string.Empty }, htmlAttributes: new { id = "ConIndexLink" })</li>
                    <li>@Html.ActionLink("diet and food for heart patients", "Diet", "Home", routeValues: new { area = string.Empty }, htmlAttributes: new { id = "DietLink" })</li>
                    <li>@Html.ActionLink("Heart disease and symptoms", "HD", "Home", routeValues: new { area = string.Empty }, htmlAttributes: new { id = "hdLink" })</li>
                    <li>@Html.ActionLink("Expert Cardiac Consultation System", "ExpertIndex", "Home", routeValues: new { area = string.Empty }, htmlAttributes: new { id = "Expertlink" })</li>



                </ul>
                <ul class="nav navbar-nav navbar-right">

                    < @if (Session["UserName"] != null)
                    {
                        <i style="font-size:24px"></i>
                        <li><a style=" color:red">  Welcome : @Session["UserName"].ToString() </a></li>
                        //<li>  <a href="@Url.Action("Logout", "Home")" class="btn btn-warning">Logout</a> </li>
                        <li>@Html.ActionLink("Logout", "Logout", "Home", routeValues: new { area = string.Empty }, htmlAttributes: new { id = "LogoutLink" })</li>
                    }

                    else
                    {

                        <li>@Html.ActionLink("Register", "Register", "Home", routeValues: new { area = string.Empty }, htmlAttributes: new { id = "registerLink" })</li>
                        <li>@Html.ActionLink("Log in", "Login", "Home", routeValues: new { area = string.Empty }, htmlAttributes: new { id = "loginLink" })</li>
                    }

                </ul>
            </div>
        </div>
    </nav>
    <br />
    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <div class="container-fluid">

            <div class="row">
                <div class="col-xs-6 col-sm-3" style="background-color:lavender;">
                    ALaa Mohammed Ajelo<br />
                   

                </div>
                <div class="col-xs-6 col-sm-3" style="background-color:lavenderblush;">
                    ALaa Mohammed Ajelo<br />

                </div>
                <!-- Add clearfix for only the required viewport -->
                <div class="clearfix visible-xs"></div>
                <div class="col-xs-6 col-sm-3" style="background-color:lightcyan;">
                    ALaa Mohammed Ajelo<br />
                </div>
                <div class="col-xs-6 col-sm-3" style="background-color:lightgray;">
                    ALaa Mohammed Ajelo<br />
                </div>
            </div>
        </div>
    </div>


    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>



</body>
</html>
